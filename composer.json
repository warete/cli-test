{
    "name": "egor/cli-app",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Egor\\Cli\\": "src/",
            "Egor\\CliApp\\": "app/"
        }
    },
    "authors": [
        {
            "name": "Egor Borisovsky",
            "email": "mr-warete@mail.ru"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "fixcs": "./vendor/bin/php-cs-fixer fix --diff --verbose",
        "phpstan": "./vendor/bin/phpstan analyse --level 9 src"
    }
}
